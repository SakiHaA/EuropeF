  <div class ="title">
    <h3 class="bg-light col-md-2 text-center">選手一覧</h3>
    <h3 class=" text-right">
      <%= link_to new_player_path do %>
      <span class ="text-body shadow-sm rounded-circle">＋</span>
      <% end %>
    </h3>
  </div>

  <div class ="row">
    <table class ="table table-borderless border-top border-bottom">
      <thead class ="bg-light">
        <tr>
          <th>選手名</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |player| %>
        <tr>
          <td>

              <%= link_to admin_player_path(player.id) do %>
      　　　　　　　<span class ="text-body shadow-sm rounded-circle"><%= player.name %></span>
      　　　　　　<% end %>
              <span class ="text-body border-bottom border-dark"></span>
              <span class ="text-body border-bottom border-dark"><%= player.player_image.html_safe %></span>
          </td>
        </tr>
        <% end %>


      </tbody>
    </table>

  </div>
</div>
<%= link_to posts_path do %>
      <span class ="text-body shadow-sm rounded-circle">＋</span>
      <% end %>
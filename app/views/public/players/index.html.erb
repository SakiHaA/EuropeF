<div class="py-4">
  <div class="container">
    <div class="row">
      <h2><span class="text-dark">選手一覧</span></h2>
    </div>

    <div class="row">
      <table class="table table-borderless border-top border-bottom">
        <tbody>
          <% @players.each do |player| %>
          <tr>
            <td class="align-bottom">
              <span class="text-dark "><%= player.player_name %></span>
            </td>
            <td class="align-bottom w-50"><%= player.player_image.html_safe %></td>
            <td class="align-bottom">
              <%= link_to player_path(player.id) do %>
                <span class="text-dark border-bottom align-bottom">
                  >><%= player.player_name %>の詳細へ
                </span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <div class="text-center">
        <%= link_to "トップページへ", root_path, class: "btn btn-secondary" %>
      </div>
  </div>
</div>
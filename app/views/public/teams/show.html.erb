<div class="py-4">
  <div class="container">
    <div class ="row">
      <div class="col-8">
        <h2><span class="text-dark"><%= @team.team_name %></span></h2>
      </div>
    </div>

      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <tr>
            <td><%= @team.team_image.html_safe %></td>
          </tr>
      　</tbody>
      </table>
      
    <div class="row">
      <div class="text-center">
        <%= @team.team_introduction %>
      </div>
    </div>

    <div class="row">
      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <% @players.each do |player| %>
          <tr>
            <td class="align-bottom">
              <span class ="text-dark"><%= player.player_name %></spna>
            </td>
            <td class="align-bottom w-50"><%= player.player_image.html_safe %></td>
            <td class="align-bottom">
              <%= link_to player_path(player.id) do %>
                <span class="text-dark border-bottom">
                  >><%= player.player_name %>の詳細へ
                </span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
      <div class="text-center">
    　   <%= link_to "チーム一覧へ戻る", teams_path, class: "btn btn-secondary" %>
      </div>
  </div>
</div>
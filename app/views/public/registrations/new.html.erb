<div class="py-4">
  <div class="container">
    <div class ="row">
      <h2><span class="text-dark">ユーザー登録</span></h2>
    </div>
    <div class="row">
      <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class ="table table-borderless">
       <tr>
         <td>ユーザー名</td>
         <td><%= f.text_field :name, class: "form-control" %></td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td><%= f.email_field :email, class: "form-control" %></td>
       </tr>
       <tr>
         <td>パスワード(6文字以上)</td>
         <td><%= f.password_field :password, class: "form-control" %></td>
       </tr>
       <tr>
         <td>パスワード(確認用)</td>
         <td><%= f.password_field :password_confirmation, class: "form-control" %></td>
       </tr>
      </table>
      <div class="text-center">
       <%= f.submit "登録する", class:"btn btn-primary" %>
       <% end %>
      </div>
      
    </div>
  </div>
</div>

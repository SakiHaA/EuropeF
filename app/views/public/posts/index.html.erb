<div class="py-4">
  <div class="container">
    <div class="row">
      <h2><span class="text-dark"><%= @player.player_name %>のスレッド</span></h2>
    </div>
    <div class="row">
      <h5 class="col-12 text-right">
        <%= link_to new_player_post_path do %>
          <span class="primary">＋レビューを投稿する</span>
        <% end %>
      </h5>
    </div>


  <% @posts.each do |post| %>
    <p><%= post.user.name %></p>
    <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
    <p><%= post.contents %></p>
    <p><%= link_to player_post_path(@player.id, post.id) do %>
                <span class="text-dark border-bottom align-bottom">
                  コメント
                </span>
              <% end %></p>
    <p><% end %></p>


      <div class="text-center">
        <%= link_to "選手の詳細へ戻る", player_path(@player.id), class: "btn btn-secondary" %>
      </div>
  </div>
</div>
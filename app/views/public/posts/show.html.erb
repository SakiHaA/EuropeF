<div class="py-4">
  <div class="container">
    <div class ="row">
      <div class="col-8">
        <h2><span class="text-dark"><%= @player.player_name %></span></h2>
      </div>
    </div>

      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <tr>
            <td><%= @player.player_image.html_safe %></td>
          </tr>
      　</tbody>
      </table>

    <div class="user-detail">
      <span><%= @post.id %>:</span>
      <span style="color:green; font-weight:bold;"><%= @post.user.user_name %></span>
      <span style="color:gray"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
      <span style="color:gray">対戦相手:<%= @post.team.team_name %></span>
      <span style="color:gray">対戦日:<%= @post.game_date %></span>
      <span style="color:gray">スタジアム:<%= @post.stadium %></span>
    </div>

  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to player_post_favorite_path(@player.id, @post.id), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to player_post_favorites_path(@player.id, @post.id), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  
  <hr>
  <div>
  <% @post.comments.each do |comment| %>
    <span style="color:green; font-weight:bold;"><%= comment.user.user_name %></span>
    <span style="color:gray"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
    <span style="color:gray"><%= comment.comment_contents %></span>
  <% end %>
  </div>
  

    <%= form_with model: ([@player, @post, @comment]) do |f| %>
    <%= f.text_area :comment_contents, rows: '7', class: "form-control" %>
    <%= f.submit "送信する" %>
  <% end %>



    <div class="text-center">
      <%= link_to "この選手のスレッド一覧へ戻る", player_posts_path(@player.id), class: "btn btn-secondary" %>
      <%= link_to "選手一覧へ戻る", players_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
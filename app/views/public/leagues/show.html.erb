<div class="py-4">
  <div class="container">
    <div class ="row">
      <div class="col-8">
        <h2><span class="text-dark"><%= @league.league_name %></span></h2>
      </div>
    </div>

      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <tr>
            <td><%= @league.league_image.html_safe %></td>
        　</tr>
      　</tbody>
      </table>
    
    <div class="row">
      <div class="text-center">
        <%= @league.league_introduction %>
      </div>
    </div>
    
    <div class="row">
      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <% @teams.each do |team| %>
          <tr>
            <td class="align-bottom">
              <span class ="text-dark"><%= team.team_name %></span>
            </td>
            <td class="align-bottom w-50"><%= team.team_image.html_safe %></td>
            <td class="align-bottom">
              <%= link_to team_path(team.id) do %>
                <span class="text-dark border-bottom">
                  >><%= team.team_name %>の詳細へ
                </span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
      <div class="text-center">
    　   <%= link_to "リーグ一覧へ戻る", leagues_path, class: "btn btn-secondary" %>
      </div>
  </div>
</div>
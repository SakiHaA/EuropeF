<div class="container">
  <div class="row">
    <div class="col-11 offset-1">
      <h2><%= @user.user_name %>のお気に入り一覧</h2>
    </div>
  </div>
  
  <hr>
  
  <div class="row py-4">
    <div class="table-responsive-xl">
      <table class="table border-top border-bottom text-nowrap offset-2">
        <thead class="bg-light">
          <tr>
            <th>お気に入りしたレビューのID</th>
            <th>お気に入りしたレビューの内容</th>
            <th>お気に入りした日時</th>
            <th>お気に入りしたレビューの詳細ページ</th>
          </tr>
        </thead>
        <tbody>
          <% @favorites.each do |favorite| %>
            <tr>
              <td><%= favorite.post.id %></td>
              <td><%= favorite.post.contents %></td>
              <td><%= favorite.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to "リンクへ", admin_player_post_path(favorite.post.player.id, favorite.post.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <hr>
  
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "マイページへ戻る", admin_user_path(@user.id), class: "btn btn-secondary" %>
    </div>
  </div>
  
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "トップページへ", admin_root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
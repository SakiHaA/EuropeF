<div class ="container">
  <div class ="title">
    <h4 class ="bg-light ml-5">リーグ情報編集</h4>
  </div>
  <div class ="row mt-4">
    <div class ="col-md-10">

    <%= form_with model: @league, url: admin_league_path(@league.id), method: :patch do |f| %>
    <table class="table table-borderless col-sm-12">
      <tr>
        <th>リーグ名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>リーグ概要</th>
        <td><%= f.text_area :introduction %></td>
      </tr>

      <tr>
        <th>リーグ画像</th>
        <td><%= f.text_field :league_image %></td>
      </tr>
    </table>
    <%= f.submit '追加', class:'btn btn-success' %>
    <% end %>

</div>


<div class="py-4">
  <div class="container">
    <div class ="row">
      <h2><span class="text-dark">リーグ追加</span></h2>
    </div>
    <div class="row">
      <%= form_with model: @league, url: admin_leagues_path, method: :post do |f| %>
      <table class ="table table-borderless ">

      <tr>
        <td>リーグ名</td>
        <td><%= f.text_field :name, class: "form-control" %></td>
      </tr>
      <tr>
        <td>リーグ概要</td>
        <td><%= f.text_area :introduction, rows: 7, class: "form-control" %></td>
      </tr>

      <tr>
        <td>リーグ画像</td>
        <td><%= f.text_field :league_image, class: "form-control" %></td>
      </tr>
    </table>
    <div class="text-center"> 
    　<%= f.submit 'リーグを追加する', class:"btn btn-success" %>
    　<% end %>
    </div>
  </div>
</div>
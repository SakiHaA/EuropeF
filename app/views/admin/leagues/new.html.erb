<div class="container">
  <h3>リーグ追加</h3>
  <div class="row">
    <%= form_with model: @league, url: admin_leagues_path, method: :post do |f| %>
    <table class="table table-borderless col-sm-12">
      <tr>
        <th>リーグ名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>リーグ概要</th>
        <td><%= f.text_area :introduction %></td>
      </tr>

      <tr>
        <th>リーグ画像</th>
        <td><%= f.text_field :league_image %></td>
      </tr>
    </table>
    <%= f.submit '追加', class:'btn btn-success' %>
    <% end %>
  </div>
</div>
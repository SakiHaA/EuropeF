<div class="py-4">
  <div class="container">
    
    <div class="row">
      <div class="col-5 offset-md-1">
        <h3><%= @league.league_name %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-8 col-md-6 offset-4 offset-md-5 offset-lg-6">
        <%= link_to "リーグ情報の編集", edit_admin_league_path(@league.id), class: "btn btn-success" %>
        <%= link_to "リーグを削除する", admin_league_path(@league.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？削除した場合、このリーグに属するチームもすべて削除されます。" %>
      </div>
    </div>
    
    <hr>
    
    <div class="row">
      <div class="col-7 offset-2">
        <%= @league.league_image.html_safe %>
      </div>
    </div>
    
    <hr>
    
    <div class="row">
      <div class="col-12 offset-md-1">
        <h3><%= @league.league_name %>のチーム一覧</h3>
      </div>
    </div>
      <% @teams.each do |team| %>
    <div class="row pt-5 pb-1">
      <div class="col-12 text-left">
        <h4><%= team.team_name %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-2">
        <%= team.team_image.html_safe %>
      </div>
    </div> 
    <div class="row pt-2">
      <h5 class="col-12 text-right text-primary">
        <%= link_to admin_team_path(team.id) do %>
          <span>
            >><%= team.team_name %>の選手一覧へ
          </span>
        <% end %>
      </h5>
    </div>
      <% end %>
    
    <hr>
    
    <div class="row py-3">
      <div class="col-12 text-center">
        <%= link_to "リーグ一覧へ戻る", admin_leagues_path, class: "btn btn-secondary" %>
      </div>
    </div>
    
    <div class="row py-3">
      <div class="col-12 text-center">
        <%= link_to "トップページへ", admin_root_path, class: "btn btn-secondary" %>
      </div>
    </div>
    
  </div>
</div>

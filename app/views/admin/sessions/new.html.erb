<div class="py-4">
  <div class="container">
    <div class ="row">
      <h2><span class="text-dark">管理人ログイン画面</span></h2>
    </div>
    <div class="row">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table class ="table table-borderless">
       <tr>
         <td>メールアドレス</td>
         <td><%= f.email_field :email, class: "form-control" %></td>
       </tr>
       <tr>
         <td>パスワード</td>
         <td><%= f.password_field :password, class: "form-control" %></td>
       </tr>
       </table>
       <div class="text-center">
         <%= f.submit "ログイン", class:"btn btn-primary" %>
         <% end %>
       </div>
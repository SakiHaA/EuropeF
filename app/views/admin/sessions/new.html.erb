<div class="container">
  
  <div class ="row offset-lg-1">
    <h3>管理人ログイン画面</h3>
  </div>
  
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class ="row pt-5 pb-4 justify-content-center">
      <div class="col-3 col-md-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6 col-md-4"><%= f.email_field :email, class: "form-control form-control-lg" %></div>
    </div>
    <div class ="row py-4 justify-content-center">
      <div class="col-3 col-md-2"><%= f.label :password, "パスワード" %></div>
      <div class="col-6 col-md-4"><%= f.password_field :password, class: "form-control form-control-lg" %></div>
    </div>
    
    <div class ="row pt-4 pb-5 text-center">
      <div class="col-12">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>
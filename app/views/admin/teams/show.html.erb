<div class="py-4">
  <div class="container">
    <div class ="row">
      <div class="col-8">
        <h2><span class="text-dark"><%= @team.team_name %></span></h2>
      </div>
      
      <div class="col-4">
        <%= link_to "チーム情報の編集", edit_admin_team_path(@team.id), class: "btn btn-success" %>
        <%= link_to "チームを削除する", admin_team_path(@team.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？削除した場合、このチームに属する選手もすべて削除されます。" %>
      </div>
    </div>

      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <tr>
            <td><%= @team.team_image.html_safe %></td>
          </tr>
      　</tbody>
      </table>
      
    <div class="row">
      <div class="text-center">
        <%= @team.team_introduction %>
      </div>
    </div>
    
  <div class="tag_search">
    <%= form_tag admin_team_path(@team), method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,options_from_collection_for_select(Tag.all, :id, :position, params[:tag_id]),
      {
        prompt: 'ポジションで絞り込み検索',
        onchange: 'submit(this.form);'
      }%>
    <% end %>
  </div>

    <div class="row">
      <table class ="table table-borderless border-top border-bottom">
        <tbody>
          <% @players.each do |player| %>
          <tr>
            <td class="align-bottom">
              <span class="text-dark">
                <% player.tags.each do |tag| %>
                　<%= tag.position %>
                <% end %>
              </span>
            </td>
          </tr>
          <tr>
            <td></td>
            <td class="align-bottom w-50"><%= player.player_image.html_safe %></td>
            <td class="align-bottom">
              <%= link_to admin_player_path(player.id) do %>
                <span class="text-dark border-bottom ">
                  >><%= player.player_name %>の詳細へ
                </span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <div class="text-center">
    　   <%= link_to "チーム一覧へ戻る", admin_teams_path, class: "btn btn-secondary" %>
      </div>
  </div>
</div>
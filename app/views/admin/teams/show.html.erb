<div class ="container">
  <div class ="row">
    <h3 class="col-md-4 text-center"><%= @team.name %></h3>
  </div>

  <div class ="row">
    <div class ="col-md-4 text-center">概要</div>
    <div class ="col-md-8 text-center"><%= @team.introduction %></div>
  </div>

  <div class ="row">
    <%= link_to "編集する", edit_admin_team_path(@team.id), class: "btn btn-success" %>
    <%= link_to "削除する", admin_team_path(@team.id), method: :DELETE, class: "btn btn-danger" %>
    <%= link_to "リーグ一覧へ戻る", admin_teams_path, class: "btn btn-success" %>
  </div>

<% @players.each do |player| %>
    <tr>
          <td>
            <%= link_to admin_player_path(player.id) do %>
              <span class ="text-body border-bottom border-dark"><%= player.name %></span>
            <% end %>
          </td>
          <td><%= player.player_image.html_safe %></td>
          <td><%= player.introduction %></td>
        </tr>

  <% end %>
</div>
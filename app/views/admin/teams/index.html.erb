<div class ="container">
  <div class ="title">
    <h3 class="bg-light col-md-2 text-center">チーム一覧</h3>
    <h3 class=" text-right">
      <%= link_to new_admin_team_path do %>
      <span class ="text-body shadow-sm rounded-circle">＋</span>
      <% end %>
    </h3>
  </div>

  <div class ="row">
    <table class ="table table-borderless border-top border-bottom">
      <thead class ="bg-light">
        <tr>
          <th>チーム名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
        <tr>
          <td>
            <%= link_to admin_team_path(team.id) do %>
              <span class ="text-body border-bottom border-dark"><%= team.name %></span>
            <% end %>
          </td>
          <td><%= team.team_image.html_safe %></td>
          <td><%= team.introduction %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  
  <div class="row">
    <div class="col-11 offset-1">
      <h2><%= @player.player_name %>のスレッド</h2>
    </div>
  </div>
  
  <hr>
  
  <div class="row">
    <div class="col-7 offset-2">
      <%= @player.player_image.html_safe %>
    </div>
  </div>
  
  <hr>
  
  <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
    <div class="search-form">
      <div class="row py-3">
        <div class="col-5 col-lg-3">
          <%= f.text_field :keyword, placeholder: "レビュー内容検索", value: @keyword, class: "form-control" %>
          <%= f.hidden_field :player_id, value: @player.id %>
        </div>
        <div class="col-4">
          <%= f.submit "検索" , class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  <% end %>
  
  <% @posts.each do |post| %>
    <div class="row pt-4">
      <div class="col-12">
        <span><%= post.id %>:</span>
        <span class="text-success"><%= post.user.user_name %></span>
        <span class="text-muted">投稿日時:<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
        <span class="text-muted">対戦相手:<%= post.team.team_name %></span>
        <span class="text-muted">対戦日:<%= post.game_date %></span>
        <span class="text-muted">スタジアム:<%= post.stadium_i18n %></span>
      </div>
    </div>
    
    <div class="row pt-4">
      <div class="col-8 offset-1">
        レビュー内容: <span class="font-weight-bold"><%= post.contents %></sapn>
      </div>
    </div>
    <div class="row">
      <h5 class="col-8 offset-3 text-primary">
        <%= link_to admin_player_post_path(@player.id, post.id) do %>
          <span>
            >>このレビューのコメントへ
          </span>
        <% end %>
      </h5>
    </div>
  <% end %>
  
  <hr>
    
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "選手の詳細へ戻る", admin_player_path(@player.id), class: "btn btn-secondary" %>
    </div>
  </div>
  
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "トップページへ戻る", admin_root_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
</div>

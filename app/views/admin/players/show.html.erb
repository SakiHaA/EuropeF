<div class="container">
  
  <div class="row">
    <div class="col-11 offset-1">
      <h2><%= @player.player_name %></h2>
    </div>
  </div>
  
  <div class="row"> 
    <div class="col-8 col-md-6 offset-4 offset-md-5 offset-lg-6">
      <%= link_to "選手情報の編集", edit_admin_player_path(@player.id), class: "btn btn-success" %>
      <%= link_to "選手を削除する", admin_player_path(@player.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？削除した場合、この選手に関する投稿やコメントすべてが削除されます。" %>
    </div>
  </div>
  
  <hr>
  
  <div class="row">
    <div class="col-7 offset-2">
      <%= @player.player_image.html_safe %>
    </div>
    <div class="col-3">
      <br>
      <br>
      <p>国籍:<%= @player.player_nationality %></p>
      <p>年齢:<%= @player.player_age %></p>
      <p>身長:<%= @player.player_height %></p>
      <p>体重:<%= @player.player_weight %></p>
      <p>ポジション:<% @player.tags.each do |tag| %>
                      [<%= tag.position %>]
                    <% end %>
      </p>
      <p>管理人から一言:<%= @player.player_introduction %></p>
      <br>
      <br>
      <br>
      <br>
      <h5 class="text-primary">
        <%= link_to admin_player_posts_path(@player.id) do %>
          <span>
            >>この選手のスレッドへ
          </span>
        <% end %>
      </h5>
    </div>
  </div>
  
  <hr>
  
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "選手一覧へ戻る", admin_players_path, class: "btn btn-secondary" %>
    </div>
  </div>
    
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "トップページへ", admin_root_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
</div>
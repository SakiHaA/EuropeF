<div class="py-4">
  <div class="container">
    <div class ="row">
      <h2><span class="text-dark">選手編集</span></h2>
    </div>

    <div class="row">
      <%= form_with model: @player, url: admin_player_path(@player.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>リーグ名</td>
          <td><%= f.collection_select :league_id, League.all,  :id, :league_name  %></td>
        </tr>
        <tr>
          <td>チーム名</td>
          <td><%= f.collection_select :team_id, Team.all,  :id, :team_name  %></td>
        </tr>
        <tr>
          <td>選手名</td>
          <td><%= f.text_field :player_name, class: "form-control" %></td>
        </tr>
        <tr>
          <td>選手概要文</td>
          <td><%= f.text_area :player_introduction, rows: 7, class: "form-control" %></td>
        </tr>
        <tr>
         <td>選手画像(gettyなどの埋め込み画像のhtml)</td>
         <td><%= f.text_field :player_image, class: "form-control" %></td>
        </tr>
        <tr>
          <td>
            <%= f.submit '編集を完了する', class:'btn btn-primary' %>
              <% end %>
          </td>
          <td>
            <%= link_to "選手の詳細画面へ戻る", admin_player_path(@player.id), class:"btn btn-secondary" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
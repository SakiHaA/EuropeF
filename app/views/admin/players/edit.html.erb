<div class="py-4">
  <div class="container">
    
    <div class ="row">
      <div class="col-12 offset-md-1">
        <h3>選手編集</h3>
      </div> 
    </div>
    
    <%= form_with model: @player, url: admin_player_path(@player.id), method: :patch do |f| %>
      <div class="row py-4 justify-content-center">
        <div class="col-3 col-md-2"><%= f.label :league_id, "リーグ名" %></div>
        <div class="col-6 col-md-4"><%= f.collection_select :league_id, League.all,  :id, :league_name %></div>
      </div>
      <div class ="row py-4 justify-content-center">
        <div class="col-3 col-md-2"><%= f.label :team_id, "チーム名" %></div>
        <div class="col-6 col-md-4"><%= f.collection_select :team_id, Team.all,  :id, :team_name %></div>
      </div>
      <div class ="row py-4 justify-content-center">
        <div class="col-3 col-md-2"><%= f.label :player_name, "選手名" %></div>
        <div class="col-6 col-md-4"><%= f.text_field :player_name, class: "form-control" %></div>
      </div>
      <div class="row py-4">
        <div class="col-4 col-md-3 offset-1 offset-md-3"><%= f.label :tag_ids, "ポジション" %></div>
        <div class="col-1">
          <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :position do |tag| %>
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class ="row py-4 justify-content-center">
        <div class="col-3 col-md-2"><%= f.label :player_introduction, "選手概要文" %></div>
        <div class="col-6 col-md-4"><%= f.text_area :player_introduction, rows: 7, class: "form-control" %></div>
      </div>
      <div class ="row py-4 justify-content-center">
        <div class="col-3 col-md-2"><%= f.label :player_image, "選手画像(gettyなどの埋め込み画像のhtml)" %></div>
        <div class="col-6 col-md-4"><%= f.text_field :player_image, class: "form-control" %></div>
      </div>
      <div class ="row py-3">
        <div class="col-12 text-center">
          <%= f.submit "追加を完了する", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    
    <div class="row py-3">
      <div class="col-12 text-center">
        <%= link_to "選手の詳細画面へ戻る", admin_player_path(@player.id), class: "btn btn-secondary" %>
      </div>
    </div>
    
  </div>
</div>
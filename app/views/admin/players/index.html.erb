<div class="py-4">
  <div class="container">
    <div class="row">
      <h2><span class="text-dark">選手一覧</span></h2>
    </div>
    <div class="row">
      <h5 class="col-12 text-right">
        <%= link_to new_admin_player_path do %>
          <span class="primary">＋選手を追加する</span>
        <% end %>
      </h5>
    </div>

  <div class="tag_search">
    <%= form_tag admin_players_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,options_from_collection_for_select(Tag.all, :id, :position, params[:tag_id]),
      {
        prompt: 'ポジションで絞り込み検索',
        onchange: 'submit(this.form);'
      }%>
    <% end %>
  </div>
      
    <div class="row">
      <table class="table table-borderless border-top border-bottom">
        <tbody>
          <% @players.each do |player| %>


          <tr>
            <td class="align-bottom">
              <span class="text-dark">
                <% player.tags.each do |tag| %>
                　<%= tag.position %>
                <% end %>
              </span>
            </td>
          </tr>
          <tr>
            <td></td>
            <td class="align-bottom w-50"><%= player.player_image.html_safe %></td>
            <td class="align-bottom">
              <%= link_to admin_player_path(player.id) do %>
                <span class="text-dark border-bottom ">
                  >><%= player.player_name %>の詳細へ
                </span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <div class="text-center">
        <%= link_to "トップページへ", admin_root_path, class: "btn btn-secondary" %>
      </div>
  </div>
</div>
<div class="py-4">
  <div class="container">
    <div class ="row">
      <h2><span class="text-dark">選手追加</span></h2>
    </div>

    <div class ="row">
      <% if @player.errors.any? %>
      <%= @player.errors.count %>件のエラーが発生しました
        <ul>
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="row">
      <%= form_with model: @player, url: admin_players_path, method: :post do |f| %>
      <table class ="table table-borderless">
        <tr>
          <td>リーグ名</td>
          <td><%= f.collection_select :league_id, League.all,  :id, :league_name  %></td>
        </tr>
        <tr>
          <td>チーム名</td>
          <td><%= f.collection_select :team_id, Team.all,  :id, :team_name  %></td>
        </tr>
        <tr>
          <td>選手名</td>
          <td><%= f.text_field :player_name, class: "form-control" %></td>
        </tr>
        <tr>
          <td>ポジション</td>
          <td><%= f.collection_check_boxes :tag_ids, Tag.all, :id, :position do |tag| %>
           <div>
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
           </div>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>選手概要文</td>
          <td><%= f.text_area :player_introduction, rows: 7, class: "form-control" %></td>
        </tr>
        <tr>
          <td>選手画像(gettyなどの埋め込み画像のhtml)</td>
          <td><%= f.text_field :player_image, class: "form-control" %></td>
        </tr>
        <tr>
          <td>
          <%= f.submit "追加を完了する", class: "btn btn-primary" %>
    　         <% end %>
    　     </td>
          <td>
            <%= link_to "選手の一覧画面へ戻る", admin_players_path, class: "btn btn-secondary" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
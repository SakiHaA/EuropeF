<div class="container">
  
  <div class="row">
    <div class="col-11 offset-1">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>
  
  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
    <div class="row pt-5 pb-4 justify-content-center">
      <div class="col-3 col-md-2"><%= f.label :user_name, "ユーザー名" %></div>
      <div class="col-6 col-md-4"><%= f.text_field :user_name, class: "form-control" %></div>
    </div>
    <div class="row py-4 justify-content-center">
      <div class="col-3 col-md-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6 col-md-4"><%= f.email_field :email, class: "form-control" %></div>
    </div>
    <div class="row py-4 justify-content-center">
      <div class="col-3 col-md-2"><%= f.label :situation, "登録状況" %></div>
      <div class="col-6 col-md-4">
        <%= f.label :is_deleted, '利用中', value: false %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '退会済み', value: true %>
        <%= f.radio_button :is_deleted, true %>
      </div>
    </div>
    <div class="row pt-4 pb-5">
      <div class="col-12 text-center">
        <%= f.submit "編集を確定する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  
  <hr>
  
  <div class="row py-3">
    <div class="col-12 text-center">
      <%= link_to "ユーザーページへ戻る", admin_user_path(@user.id), class: "btn btn-secondary" %>
    </div>
  </div>

</div>
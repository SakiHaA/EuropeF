<!DOCTYPE html>
<html>
  <head>
    <title>EuropeF</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <div class="container">
           <a class="navbar-brand text-light" href="/">
             <span>EuropeF</span>
           </a>
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>
           <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
             <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
               <li class="nav-item">
                 <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "リーグ一覧", leagues_path, class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "チーム一覧", teams_path, class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "選手一覧", players_path, class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
               </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                 <%= link_to "ユーザー一覧", admin_users_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                 <%= link_to "リーグ一覧", admin_leagues_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                 <%= link_to "チーム一覧", admin_teams_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                 <%= link_to "選手一覧", admin_players_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
                </li>
              <% else %>
               <li class="nav-item">
                 <%= link_to "このサイトについて", about_path, class: 'nav-link text-light' %>
               </li>

               <li class="nav-item">
                 <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
               </li>
               <li class="nav-item">
                <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: 'nav-link text-light' %>
               </li>
              <% end %>
           </div>
         </div>
      </nav>


  </header>

    <%= yield %>
  </body>
</html>
